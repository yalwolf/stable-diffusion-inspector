{
  "compilerOptions": {
    "target": "ES2020",
    // 指定 ECMAScript 目标版本
    "module": "commonjs",
    // 使用 CommonJS 模块规范（Node.js 标准）
    "outDir": "./dist",
    // 输出目录
    "rootDir": "./src",
    // 源代码目录
    "strict": true,
    // 启用严格类型检查
    "esModuleInterop": true,
    // 改进模块兼容性
    "skipLibCheck": true,
    // 跳过库文件检查
    "resolveJsonModule": true
    // 允许从 JSON 文件导入
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ]
  // 包含的源文件
}